@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>STYLISTS</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet</h3>
}
else
{
  <ol>
    @foreach (Stylist stylist in Model)
    {
      <li class="blocktext">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ol>
}
<hr />
<p>@Html.ActionLink("Add new stylist", "Create", "Stylists", null, new {@class="button"})</p>
