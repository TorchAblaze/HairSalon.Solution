@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>NEW CLIENT</h1>
<hr />

@if (Enumerable.Count(ViewBag.StylistId) == 0)
{
  <h3>You need to add a stylist before you can add a client</h3>
  <br>
  <p>@Html.ActionLink("Add a stylist", "Create", "Stylists", null, new { @class="button" })</p>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})
    <br>
    @Html.LabelFor(model => model.AppointmentDateTime)
    @Html.TextBoxFor(model => model.AppointmentDateTime, new { @class="form-control", type="datetime"})
    <br>
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, new { @class="form-control", @required="required"})
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <br>
    <input type="submit" value="Add new client">
  }
}
<br>
<hr />
<p>@Html.ActionLink("Show all clients", "Index", "Clients", null, new {@class="button"})</p>