@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>CLIENTS</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet</h3>
}
else
{
  <ol>
  @foreach (Client client in Model)
  {
    <li class="blocktext">@Html.ActionLink($"{client.Name}", "Details", new { id = client.Name})</li>
  }
  </ol>
}

<p>@Html.ActionLink("Add new client", "Create", "Clients", null, new {@class="button"})</p>